<script>

function openTab(tabname){
    document.getElementById(tabname).style.display = 'block';
}

function closeTab(element){
    element.style.animation = 'fadeOut .5s';
    setTimeout(function () {
        element.style.display = 'none';
        element.style.animation = 'fadeIn .5s';
    }, 500);
}

</script>

